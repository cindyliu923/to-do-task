<!DOCTYPE html>
<html>
  <head>
    <title>ToDoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #227700;">
      <%= link_to t("tasks.titles"), root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto text-white">
          <% if current_user %>
            <%= search_form_for @q do |f| %>
              <%= f.label :title_cont, t("common.title") %>
              <%= f.search_field :title_cont %>
              <%= f.label :status_eq, t("common.status") %>
              <%= f.select :status_eq , options_for_select(Task.select_options_by_status), :include_blank => true %>
              <%= f.submit class: "btn btn-warning btn-sm" %>
            <% end %>
            <li class="nav-item nav-link">Hi, <%= current_user.name %></li>
            <li class="nav-item"><%= link_to('Log out', logout_path, class: "nav-link") %></li>
          <% else %>
            <li class="nav-item"><%= link_to('Sign up', signup_path, class: "nav-link") %></li>
            <li class="nav-item"><%= link_to('Log in', login_path, class: "nav-link") %></li>
          <% end %>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-link active badge badge-light"><%= link_to t("common.locale.zh-TW"), :controller => :application, :action => :change_locale, :locale => "zh-TW" %></li>
          <li class="nav-link active badge badge-light"><%= link_to t("common.locale.en"), :controller => :application, :action => :change_locale, :locale => "en" %></li>
        </ul>
      </div>
    </nav>

    <% if flash[:notice] %>
      <div class="container">
        <div class="row">
          <div class="alert alert-success alert-dismissible alert-fixed">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= notice %>
          </div>
        </div>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="container">
        <div class="row">
          <div class="alert alert-danger alert-dismissible alert-fixed">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= alert %>
          </div>
        </div>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
