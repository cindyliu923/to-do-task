<!DOCTYPE html>
<html>
  <head>
    <title>ToDoTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to t("common.locale.zh-TW"), :controller => controller_name, :action => action_name, :locale => "zh-TW" %>
    <%= link_to t("common.locale.en"), :controller => controller_name, :action => action_name, :locale => "en" %>
    <%= notice %>
    <%= alert %>
    <%= yield %>
  </body>
</html>
