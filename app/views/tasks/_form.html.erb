<div class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col align-self-center">
        <div class="p-4"></div>
        <% if @task.errors.present? %>
          <ul>
            <% @task.errors.each do |error, message| %>
              <li> <%= "#{message}" %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="form container">
          <%= form_for @task do |f| %>
            <div class="form-group">
              <%= f.label :title, t("tasks.title") %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :content, t("tasks.content") %>
              <%= f.text_area :content, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :tag_list, t("tag.title") %>
              <%= f.text_field :tag_list, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :deadline, t("tasks.deadline") %>
              <%= f.text_field :deadline, id: 'datetimepicker', class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :priority, t("common.priority") %>
              <%= f.select :priority, options_for_select(Task.select_options_by_priority),{}, class: "form-control" %>
            </div>
            <%= f.submit class: "btn btn-outline-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#datetimepicker').datetimepicker();
</script>
