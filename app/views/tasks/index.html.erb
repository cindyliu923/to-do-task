<h1><%="To Do task" %></h1>

<table>
  <tr>
    <th><%= "Title" %></th>
    <th><%= "Show" %></th>
    <th><%= "Edit" %></th>
    <th><%= "Destroy" %></th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Destroy', task_path(task), method: :delete, data:{ confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>

<div><%= link_to 'New task', new_task_path %></div>
